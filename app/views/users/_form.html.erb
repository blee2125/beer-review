<div class="box">
<%= form_for @user do |f| %>

    <div class="field">
    <%= f.label :username, "Username" %>
    <div class="control">
    <%= f.text_field :username, required: true %><br>
    </div></div>

    <div class="field">
    <%= f.label :password, "Password" %>
    <div class="control">
    <%= f.password_field :password %><br>
    </div></div>

    <div class="field">
    <%= f.label :name, "Name" %>
    <div class="control">
    <%= f.text_field :name, required: true %><br>
    </div></div>

    <div class="field">
    <%= f.label :email, "Email" %>
    <div class="control">
    <%= f.text_field :email, required: true %><br>
    </div></div>

    <div class="field">
    <%= f.label :location, "Location" %>
    <div class="control">
    <%= f.text_field :location, required: true %><br>
    </div></div>

    <%= f.submit 'Submit', class: 'button' %>

<% end %>
</div>