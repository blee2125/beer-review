<%= form_for @user do |f| %>

    <%= f.label :username, "Username" %>
    <%= f.text_field :username %><br>

    <%= f.label :password, "Password" %>
    <%= f.password_field :password %><br>

    <%= f.label :name, "Name" %>
    <%= f.text_field :name %><br>

    <%= f.label :email, "Email" %>
    <%= f.text_field :email %><br>

    <%= f.label :location, "Location" %>
    <%= f.text_field :location %><br>

    <%= f.submit %>

<% end %>