<h1>Comments</h1>

<%= link_to 'New Comment', new_beer_comment_path(@beer) %><br>


    <div class="box">
        <% @beer.comments.each do |comment| %>
            <div class="box" id="commentbox">
                <p><a href="<%= user_path(comment[:user_id]) %>"><%= comment.user.name %></a> - <%= comment.comment %></p><br>
            </div>
        <% end %>
    </div>

