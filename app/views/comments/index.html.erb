<div class="box">
<h2>Comments</h2>

<a class="button" href="<%= beer_path(@beer) %>"><%= "#{@beer.name}" %></a>

<% if @beer.comments.find_by(user_id: current_user.id) %>

<% else %>
    <a class="button" href="<%= new_beer_comment_path(@beer) %>">Add A Comment</a>
<% end %>


    <div class="box">
        <% @beer.comments.each do |comment| %>
            <div class="box" id="commentbox">
                <p><a href="<%= user_path(comment[:user_id]) %>"><%= comment.user.username %></a> - <%= comment.comment %></p><br>
                Drink again? <%= comment.yesno %>
                <% if comment.user_id == current_user.id %>
                    <a class="button" href="<%= edit_beer_comment_path(@beer, current_user.id) %>">Edit Comment</a>
                    <a class="button" href="<%= beer_comment_path(@beer,comment) %>">Delete Comment</a>
                <% end %>
            </div>
        <% end %>
    </div>
</div>

