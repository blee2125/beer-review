<div class="box">
<%= form_for @comment, url: beer_comments_path, html: {id: "newcomment"}  do |f| %>

    <%= f.hidden_field :beer_id, value: params[:beer_id] %>
    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="field">
    <%= f.label :comment, "Comment" %><br>
    <div class="control">
    <%= f.text_area :comment %><br>
    </div></div>

    <%= f.submit 'Submit Comment', class: 'button' %>

<% end %>
</div>