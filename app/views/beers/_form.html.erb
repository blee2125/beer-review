<%= form_for @beer do |f| %>

    <%= f.label :name, "Name" %>
    <%= f.text_field :name %><br>

    <%= f.label :brewery, "Brewery" %>
    <%= f.text_field :brewery %><br>

    <%= f.label :origin, "Origin" %>
    <%= f.text_field :origin %><br>

    <%= f.label :style, "Style" %>
    <%= f.text_field :style %><br>

    <%= f.label :abv, "ABV" %>
    <%= f.number_field :abv %><br>

    <%= f.submit %>

<% end %>